@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro%3A300%2C400%2C700%2C300italic%2C400italic%2C700italic%7CBitter%3A400%2C700&#038;subset=latin%2Clatin-ext')

  
body
  font-family "Source Sans Pro", Helvetica, sans-serif
  font-size 16px
  color black
    
h1  
h2
h3
h4
  font-family Bitter, Georgia, serif

h1
  line-height 100px
h2 
  font-size 22px
  font-weight 600
  margin-bottom 30px
ul 
  list-style-type square
  margin-bottom 30px

p
  line-height 28px
  margin-bottom 30px

#content
  &:after
    content ""
    height 50px
    display block
  padding 15px
  iframe
    width 100%
    min-height 400px
  a
    text-decoration none
    color rgb(226, 95, 16)
    &:hover
      text-decoration underline
    &:focus
      text-decoration none
      color rgb(226, 95, 16)    
    &:active
      text-decoration underline
      color rgb(226, 95, 16)
    &:visited
      text-decoration none
      color rgb(226, 95, 16)


.navbar-default 
  background rgb(247, 245, 231)
  .navbar-nav
    li
      &:hover
        background rgb(34, 14, 16)  
        a  
          color white
      &:active  
        background rgb(34, 14, 16)

#header-img
  width 100%
  height 220px
  background-image url("../imgs/bg/dark.png")
  background-position bottom center
  background-size cover
  background-repeat no-repeat
  position relative
  span
    position absolute
    bottom -30px
    left 100px
    margin 0
    color rgb(255, 255, 255, 0.5)
    font-size 72px
    font-weight 600
    
#footer
  height 100px
  background rgb(247, 245, 231)
  